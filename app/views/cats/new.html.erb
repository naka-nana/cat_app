<div class="container">
    <% if @cat.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(@cat.errors.count, "エラー") %>が発生しました:</h2>
      <ul>
        <% @cat.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <%= form_with(model: @cat, local: true) do |f| %>
      <div>
        <%= f.label :name, '名前' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div>
        <%= f.label :age_id, '年齢' %>
        <%= f.collection_select :age_id, @ages, :id, :name, { prompt: '選択してください' }, class: 'form-control' %>
      </div>

      <div>
        <%= f.label :breed_id, '品種' %>
        <%= f.collection_select :breed_id, @breeds, :id, :name, { prompt: '選択してください' }, class: 'form-control' %>
      </div>

      <%= f.submit '保存', class: 'btn btn-primary' %>
    <% end %>
</div>