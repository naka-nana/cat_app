<turbo-stream action="replace" target="follow-button">
  <template>
    <%= render partial: "users/follow_button", locals: { user: current_user } %>
  </template>
</turbo-stream>

<turbo-stream action="replace" target="followers-count-number">
  <template>
    <%= @user.followers.count %>
  </template>
</turbo-stream>

<turbo-stream action="replace" target="following-count-number">
  <template>
    <%= current_user.following.count %>
  </template>
</turbo-stream>