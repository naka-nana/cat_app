<% if current_user.following?(user) %>
  <%= button_to "フォロー解除", relationship_path(current_user.active_relationships.find_by(following: user)), method: :delete, remote: true, class: "btn btn-danger" %>
<% else %>
  <%= button_to "フォローする", relationships_path(following_id: user.id), method: :post, remote: true, class: "btn btn-primary" %>
<% end %>